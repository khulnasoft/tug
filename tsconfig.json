{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "noErrorTruncation": true
  },
  "exclude": ["node_modules/"],
  "include": ["index.d.ts", "plugins/**/*", "util/**/*"],
  "types": ["index.d.ts"]
}
